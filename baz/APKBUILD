# Contributor:
# Maintainer:
pkgname=baz
pkgver=7.5.5
pkgrel=1
pkgdesc="A fast, easy, simple and lightweight plugin manager for GNU bash"
url="https://github.com/TruncatedDinosour/baz"
arch="noarch"
license="GPL-3.0"
depends="bash git"
makedepends=""
checkdepends=""
install=""
subpackages="$pkgname-bash-completion:bash_completion"
source="${pkgname}-${pkgver}.tar.gz::https://github.com/TruncatedDinosour/$pkgname/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

prepare() {

default_prepare

}
check() {
 :
}
package() {
        install -Dm755 baz "$pkgdir"/usr/bin/baz
        install -Dm744 completions/baz.bash "$pkgdir"/usr/share/bash-completion/completion/baz.bash
}
bash_completion() {
        pkgdesc="Bash completion for baz"
        depends="baz"
        mkdir -p "$subpkgdir"/usr/share/bash-completion/completion/
        mv "$pkgdir"/usr/share/bash-completion/completion/baz.bash "$subpkgdir"/usr/share/bash-completion/completion/baz.bash
        rm -r "$pkgdir"/usr/share/bash-completion/completion/
        rm -r "$pkgdir"/usr/share/bash-completion/
        rm -r "$pkgdir"/usr/share/
}


sha512sums="
